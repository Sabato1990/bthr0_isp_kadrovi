{
  "name": "ISP_Kadrovi",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "2",
    "@sap-cloud-sdk/http-client": "2.11.0",
    "@sap-cloud-sdk/odata-common": "^2",
    "@sap-cloud-sdk/odata-v2": "2.11.0",
    "@sap-cloud-sdk/odata-v4": "2.11.0",
    "@sap-cloud-sdk/openapi": "2.11.0",
    "@sap/cds": "^6.3.2",
    "@sap/xssec": "^3",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "auth": {
        "kind": "xsuaa"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
